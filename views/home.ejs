<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Screen</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Verdana, Geneva, Tahoma, sans-serif;
      }
      body {
        width: 100%;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: #f4f4f4;
        overflow: hidden;
      }
      .container {
        text-align: center;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        padding: 40px;
        width: 90%;
        max-width: 600px;
        margin: 20px;
      }
      h1 {
        font-size: 2.8em;
        color: #333;
        margin-bottom: 20px;
        font-weight: bold;
      }
      p {
        font-size: 1.4em;
        color: #666;
        margin-bottom: 30px;
      }
      .button-container {
        display: flex;
        flex-direction: column;
        gap: 15px;
        margin-bottom: 20px;
      }
      .button {
        background: #007bff;
        color: #fff;
        padding: 15px;
        border-radius: 8px;
        border: none;
        text-decoration: none;
        font-size: 1.2em;
        cursor: pointer;
        transition: background 0.3s, transform 0.2s;
        display: block;
        width: 100%;
        max-width: 300px;
        margin: 0 auto;
      }
      .button:hover {
        background: #0056b3;
        transform: scale(1.05);
      }
      .button.secondary {
        background: #6c757d;
      }
      .button.secondary:hover {
        background: #5a6268;
      }

      /* Popup styles */
      .popup {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: rgba(0, 0, 0, 0.7);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.3s, visibility 0.3s;
      }
      .popup.active {
        opacity: 1;
        visibility: visible;
      }
      .popup-content {
        background: #fff;
        border-radius: 12px;
        padding: 20px;
        max-width: 90%;
        width: 500px;
        text-align: center;
        position: relative;
      }
      .popup-content h2 {
        font-size: 2.2em;
        margin-bottom: 20px;
        color: #333;
      }
      .popup-content img {
        width: 100%;
        max-width: 400px;
        height: auto;
        border-radius: 10px;
        margin-bottom: 10px;
      }
      .popup-content .img-title {
        font-size: 1.4em;
        color: #333;
        margin-bottom: 20px;
      }
      .popup-content .close-btn {
        position: absolute;
        top: 10px;
        right: 10px;
        background: #ff0000;
        color: #fff;
        border: none;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 1.5em;
        cursor: pointer;
        transition: background 0.3s;
      }
      .popup-content .close-btn:hover {
        background: #cc0000;
      }
      @media (max-width: 600px) {
        .popup-content {
          width: 90%;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Padhxa Nepal</h1>
      <p>Your journey to a productive learning experience begins here.</p>
      <div class="button-container">
        <a href="/chat" class="button">Science Faculty</a>
        <a href="/chat" class="button">Management Faculty</a>
      </div>
      <a href="/profile" class="button secondary">View Details</a>
    </div>

    <!-- Popup 1 -->
    <div class="popup" id="popup1">
      <div class="popup-content">
        <button class="close-btn" id="close-popup1">&times;</button>
        <h2>Sponsor 1</h2>
        <img src="https://via.placeholder.com/400x200" alt="Sponsor 1 Image" />
        <p class="img-title">Sponsor 1 Title</p>
      </div>
    </div>

    <!-- Popup 2 -->
    <div class="popup" id="popup2">
      <div class="popup-content">
        <button class="close-btn" id="close-popup2">&times;</button>
        <h2>Sponsor 2</h2>
        <img src="https://via.placeholder.com/400x200" alt="Sponsor 2 Image" />
        <p class="img-title">Sponsor 2 Title</p>
      </div>
    </div>

    <script>
      // JavaScript to handle popups
      const popups = {
        popup1: document.getElementById('popup1'),
        popup2: document.getElementById('popup2'),
      };

      const closeButtons = {
        closePopup1: document.getElementById('close-popup1'),
        closePopup2: document.getElementById('close-popup2'),
      };

      // Function to show a popup
      function showPopup(popupId) {
        popups[popupId].classList.add('active');
        document.body.style.overflow = 'hidden'; // Prevent scrolling when popup is open
      }

      // Function to close a popup
      function closePopup(popupId) {
        popups[popupId].classList.remove('active');
        document.body.style.overflow = ''; // Restore scrolling when popup is closed
      }

      // Show multiple popups sequentially
      function showPopupsSequentially() {
        let currentPopup = 'popup1';
        showPopup(currentPopup);

        setTimeout(() => {
          closePopup(currentPopup);
          currentPopup = 'popup2';
          showPopup(currentPopup);
        }, 5000); // Show each popup for 5 seconds
      }

      // Show popups sequentially on page load
      window.onload = function () {
        showPopupsSequentially();
      };

      // Add event listeners to close buttons
      closeButtons.closePopup1.onclick = function () {
        closePopup('popup1');
      };

      closeButtons.closePopup2.onclick = function () {
        closePopup('popup2');
      };

      // Optionally, close the popup when clicking outside of the popup-content
      window.onclick = function (event) {
        if (event.target.classList.contains('popup')) {
          for (const popupId in popups) {
            closePopup(popupId);
          }
        }
      };
    </script>
  </body>
</html>
